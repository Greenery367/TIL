import java.util.Scanner;
import java.io.FileInputStream;

class Solution
{
	public static void main(String args[]) throws Exception
	{
		Scanner sc = new Scanner(System.in);
		int T=sc.nextInt();
        int sum=0;

		for(int a=1; a<1+T; a++){
            sum += a;
        }
        
        System.out.println(sum);
	}
}